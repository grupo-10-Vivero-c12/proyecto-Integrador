<!DOCTYPE html>
<html lang="en">
<%- include('../headAdmin') %>

    <body>
        <%- include('../headerAdmin-edit') %>

            <main class="main-admin">
                <h2>Editando Usuario <%- user.id %>
                </h2>
                <div class="form-create">
                    <form action="/admin/users/edit/<%- user.id %>?_method=PUT" method="post" class="form-container">

                        <div class="form-contain descripcion-form">
                            <label for="name">Nombre</label>
                            <input type="text" id="name" value="<%- user.name %> " name="name" required>
                        </div>

                        <div class="form-contain descripcion-form">
                            <label for="email">Email</label>
                            <input type="email" id="email" value="<%- user.email %> " name="email" required>
                        </div>

                        <div class="form-contain descripcion-form">
                            <label for="currentPass">Contraseña actual</label>
                            <input type="password" id="currentPass" value="" name="currentPass" required>
                        </div>

                        <div class="form-contain descripcion-form">
                            <label for="password">Nueva Contraseña</label>
                            <input type="password" id="password" value="" name="password" required>
                        </div>

                        <div class="form-contain descripcion-form">
                            <label for="password2">Confirmar Nueva Contraseña</label>
                            <input type="password" id="password2" value="" name="password2" required>
                        </div>

                        <div class="btn-admin">
                            <button type="submit">Guardar cambios</button>
                        </div>
                    </form>
                </div>

            </main>

            <script src="../../js/menuAdmin.js"></script>
    </body>

</html>