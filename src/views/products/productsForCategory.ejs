<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
    <title>Home</title> 
</head>
<body class="home">
    <%- include('../partials/header.ejs') %>
    <div>
        <h2>Categoria Nombre</h2>
    </div>
    <div>
        <form action="/product/category/<%= products[0].id_category %>" method="get">
            <label for="">Ordenar por</label>
            <select name="filter" id="">
                <option value=""></option>
                <option value="priceMin">Menor precio</option>
                <option value="priceMay">Mayor precio</option>
                <option value="nameAsc">Nombre Ascendente</option>
                <option value="nameDesc">Nombre Descendente</option>
            </select>
            <button type="submit">Filtrar</button>
        </form>
    </div>

    <section class="container-products">
        <div class="products">
            <%  products.forEach(product => {%>
                <div class="product-related">
                    <div class="image-product">
                        <a href="/product/detail/<%= product.id %>"><img src="/images/products/<%= product.images %>" alt=""></a>
                    </div>
                    <div class="description-product">
                        <a href="/product/detail/<%= product.id %> "><p><%= product.name %></p></a>
                        <p>$<%= toThousand(product.price) %></p>
                        <button class="btn">Comprar</button>
                    </div>
                </div>
            <% });%>
    </section>
        

        
        
</body>
<%- include('../partials/footer.ejs') %>
</html>
